<h1>Listing clients</h1>

<table border=1, id= 'clients'>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr id = "<%=client.id%>" >
    <td></td>
    <td>
      <%= client.name %>
    </td>
    <td>
      <%= client.email %>
    </td>
    <td></td>
    <td>      
      <%= link_to 'Edit', edit_client_path(:id=>"#{client.id}"), remote: true %>
    </td>    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Client', new_client_path, remote: true, id: 'new_client_link' %>


<script type="text/javascript">
$(document).ready(function() {
  $('#new_client_link').click(function(event){
      $(this).hide();
      event.preventDefault();
    });
});
</script>